<MyGridLayout>

    name:name
    food:food
    color:color

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2

            Label:
                text:"Name"
            TextInput:
                id:name
                multiline:False

            Label:
                text:"Favorite Color"
            TextInput:
                id:color
                multiline:False

            Label:
                text:"Food"
            TextInput:
                id:food
                multiline:False

        Button:
            text:"Submit"
            font_size:72
            on_press:root.press()