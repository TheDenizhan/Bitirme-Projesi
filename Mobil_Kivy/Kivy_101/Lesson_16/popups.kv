#:import Factory kivy.factory.Factory
<MyPopup@Popup>
    auto_dismiss:False
    title:'This is a popup box'
    size_hint:0.6,0.2
    pos: self.pos
    GridLayout:
        cols:2
        Button:
            text:'Close'
            on_release:root.dismiss()
        Button:
            text:'Close2'
            on_release:root.dismiss()
<MyLayout>:

    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height

        Label:
            text:'popups'
            font_size:32
        Button:
            text:'popup'
            font_size:32
            size_hint:(.5,.5)
            pos_hint:{'x':.2,'y':.2}
            on_release: Factory.MyPopup().open()