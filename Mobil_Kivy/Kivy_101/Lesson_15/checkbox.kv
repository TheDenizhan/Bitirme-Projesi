<MyLayout>:

    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height

        Label:
            text:"Pizza"
            font_size:32
        GridLayout:
            cols:2
            Label:
                text:'pepperoni'
                font_size:32
            CheckBox:
                on_active:root.checkbox_click(self,self.active)
            Label:
                text:'cheese'
                font_size:32
            CheckBox:
                on_active:root.checkbox_click(self,self.active)
            Label:
                text:'ketchup'
                font_size:32
            CheckBox:
                group:'sous'
                on_active:root.checkbox_click(self,self.active)
            Label:
                text:'mayo'
                font_size:32
            CheckBox:
                group:'sous'
                on_active:root.checkbox_click(self,self.active)
